{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@models": ["models"],
      "@models/*": ["models/*"],
      "@modules": ["modules"],
      "@modules/*": ["modules/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@app/*": ["*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}